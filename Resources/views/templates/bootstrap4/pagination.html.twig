            <th>Demo</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>Demo</td>
            <td>Demo</td>
            <td>Demo</td>
            <td>Demo</td>
        </tr>
        <tr>
            <td>Demo</td>
            <td>Demo</td>
            <td>Demo</td>
            <td>Demo</td>
        </tr>
        <tr>
            <td>Demo</td>
            <td>Demo</td>
            <td>Demo</td>
            <td>Demo</td>
        </tr>
        </tbody>
    </table>
{% endblock tableContent %}
</div>

<div class="d-flex justify-content-center">
    {{ nadia_paginator_pages(pagination) }}
</div>

{{ form_end(form) }}
