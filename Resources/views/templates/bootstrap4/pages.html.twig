<nav>
    <ul class="pagination">
        <li class="page-item first-page {% if firstPage.url == '#' %}disabled{% endif %}">
            <a class="page-link" href="{{ firstPage.url }}" tabindex="-1">
                {{ firstPage.text|trans([], paginatorTranslationDomain) }}
            </a>
        </li>
        <li class="page-item previous-page {% if previousPage.url == '#' %}disabled{% endif %}">
            <a class="page-link" href="{{ previousPage.url }}" tabindex="-1">
                {{ previousPage.text|trans([], paginatorTranslationDomain) }}
            </a>
        </li>

        {% if nextPreviousPage.number > firstPage.number %}
        <li class="page-item">
            <a class="page-link" href="{{ nextPreviousPage.url }}" tabindex="-1">
                {{ nextPreviousPage.text }}
            </a>
        </li>
        {% endif %}

        {% for page in pages %}
        <li class="page-item {% if page.number == current %}active{% endif %}">
            <a class="page-link" href="{{ page.url }}">
                {{ page.text }}
            </a>
        </li>
        {% endfor %}

        {% if nextNextPage.number < lastPage.number %}
        <li class="page-item">
            <a class="page-link" href="{{ nextNextPage.url }}" tabindex="-1">
                {{ nextNextPage.text }}
            </a>
        </li>
        {% endif %}

        <li class="page-item next-page {% if nextPage.url == '#' %}disabled{% endif %}">
            <a class="page-link" href="{{ nextPage.url }}" tabindex="-1">
                {{ nextPage.text|trans([], paginatorTranslationDomain) }}
            </a>
        </li>
        <li class="page-item last-page {% if lastPage.url == '#' %}disabled{% endif %}">
            <a class="page-link" href="{{ lastPage.url }}" tabindex="-1">
                {{ lastPage.text|trans([], paginatorTranslationDomain) }}
            </a>
        </li>
    </ul>
</nav>
