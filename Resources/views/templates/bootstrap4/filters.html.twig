{% for name, form in filterForm %}
    {% if name in validColumns %}
    <div {% for key, value in options.attributes|default({}) %}{{ key }}="{{ value }}"{% endfor %}>
        <div>
            <small>
                {{ form.vars.label }}
            </small>
        </div>
        {{ form_widget(form) }}
    </div>
    {% endif %}
{% endfor %}
